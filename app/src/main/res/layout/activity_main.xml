<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/panel_rojo"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margen_main"
        android:layout_marginBottom="@dimen/margen_main"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/rojo_principal"
        />

    <TextView
        android:id="@+id/panel_verde"
        android:layout_marginTop="@dimen/margen_main"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margen_main"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/verde_principal"
        />

    <TextView
        android:id="@+id/panel_azul"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margen_main"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/azul_principal"
        />

</LinearLayout>